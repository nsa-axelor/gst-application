<?xml version="1.0" encoding="UTF-8"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views
  http://axelor.com/xml/ns/object-views/object-views_5.2.xsd">

  <grid model="com.axelor.apps.gst.db.Product" title="Product Grid"
    name="product-grid">
    <field name="name" />
    <field name="code" />
    <field name="hsbn" />
    <field name="category" />
    <field name="salePrice" />
    <field name="costPrice" />
    <field name="image" />
    <field name="gstRate" />
  </grid>

  <form model="com.axelor.apps.gst.db.Product" title="Product Form"
    name="product-form">
    <panel>
      <panel colSpan="9">
        <field name="name" />
        <field name="code" />
        <field name="hsbn" />
      </panel>
      <panel colSpan="3">
        <field name="image" />
      </panel>

    </panel>
    <panel>
      <field name="category" onChange="action-gst-record-set-gstrate-from-product-category"/>
      <field name="salePrice" />
      <field name="costPrice" />
      <field name="gstRate" />
    </panel>
  </form>

  <action-record name="action-gst-record-set-gstrate-from-product-category" model="com.axelor.apps.gst.db.Product">
    <field name="gstRate" expr="eval: __this__.category.gstRate"/>
  </action-record>

</object-views>
